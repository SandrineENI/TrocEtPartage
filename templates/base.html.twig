<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta lang="fr-FR">
    <title>{% block title %}T & P{% endblock %}</title>
    {% set photoIco = asset('images/base/Logo_TeP.png') %}
    <link rel="icon" href="{{ photoIco }}" >
    <link rel="stylesheet" href="{{ asset('css/global.css') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    {% block stylesheets %}
    {% endblock %}

</head>
<body>
<nav class="container-fluid pt-3 pb-3 pb-md-3">
    {% set photoPath = asset('images/base/Logo_TeP.png') %}
    {% set photoBurger = asset('images/base/menu_burger.png') %}
    {% set photoMsg = asset('images/base/enveloppe_blanche.png') %}
    {% set photoConnect = asset('images/base/connexion_marieva.png') %}
    {% set photoDeconnect = asset('images/base/deconnexion_marieva.png') %}
    {% set soundPath = asset('sounds/menuSortieSound.mp3') %}
    {# Menu principal #}
    <div id="desktop" class="d-lg-flex row align-items-center justify-content-evenly">
        {# {% if 'iPhone' in app.request.headers.get('User-Agent')
            or 'iPod' in app.request.headers.get('User-Agent')
            or 'Android' in app.request.headers.get('User-Agent')
            or 'BlackBerry' in app.request.headers.get('User-Agent') %}
        {% else %} #}
        <div class="row">
            <div class="col-2">
                <a class="logo" href="{{ path('app_main') }}">
                    {# <img id="logo" src="{{ photoPath }}"  class="img-fluid hover-sound" data-sound="{{ asset('sounds/church-bell-sound-effect-Jaime_Jésus.mp3') }}" alt="logo j'aime Jésus.fr"> #}
                    <img id="logo" src="{{ photoPath }}" width="250px"  class="img-fluid " alt="Accueil troc-et-partage.fr">
                </a>
            </div>
            <div id="titre" class="col-8">
                <h4 class="lienContainer text-center enBleu tresGros">Troc & Partage </h4>
            </div>
            <!-- Affichage du lien pour la déconnexion si utilisateur authentifié -->
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <div class="col-2">
                    <div class="col-12">
                        <div class="lienProfil d-flex flex-column-reverse align-items-end">

                        </div>
                        <div class="text-end">
                            <p></p>
                        </div>

                        <div id="deconnexion" class=" text-center me-2">
                            <div class="conteneurMenu">
                                <a id="lien_connexion" href="#" ><img id="" src="{{ photoDeconnect }}" width="100px"  class="img-fluid " alt="logo deconnexion marieva.fr"></a>
                                <div class="infobulleMenu" >
                                    <a id="lien_connexion" href="#">Se Déconnecter</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div id="connexion" class="col-2 custom-menu text-center">
                    <div class="conteneurMenu">
                        <img id="" src="{{ photoConnect }}" width="100px"  class="img-fluid " alt="logo connexion marieva.fr">
                        <div class="infobulleMenu" >
                            <a id="lien_connexion" href="#">Se Connecter</a>
                            <a id="lien_connexion" href="#">S'inscrire</a>
                        </div>
                    </div>

                </div>
            {% endif %}
        </div>

        {#  {% endif %}#}
    </div>
    <div id="mobile" >
        <div class="row">
            <div class="col-2">
                <a class="" href="{{ path('app_main') }}">
                    <img id="logo" src="{{ photoPath }}" width="100%"  class="img-fluid" alt="logo site troc-et-partage.fr">
                </a>
            </div>
            <div id="titre2" class="col-8 d-flex align-items-center justify-content-center" >
                {% if 'iPhone' in app.request.headers.get('User-Agent')
                    or 'iPod' in app.request.headers.get('User-Agent')
                    or 'Android' in app.request.headers.get('User-Agent')
                    or 'BlackBerry' in app.request.headers.get('User-Agent') %}
                    <h4 id="titrePortraitMob" class=" lienContainer text4Rem enBleu text-center ">Troc & Partage</h4>
                    <h4 id="titrePaysageMob" class="lienContainer text4Rem enBleu text-center">Troc & Partage</h4>
                {% else %}
                    <h4 class="lienContainer text-center enBleu text3Rem">Troc & Partage</h4>
                {% endif %}
            </div>
            <div class=" col-2" id="burger-icon">
                <img class="img-fluid" src="{{ asset('images/base/Icone_menu.png') }}" width="100px" alt="Menu TeP" />
            </div>
        </div>
    </div>
</nav>
<div class="" id="bodyToo">
    {% for label, messages in app.flashes %}
    {% for message in messages %}
    <div class="container text-center">
        <div class="row">
            <div class="col-1"></div>
            {% if 'iPhone' in app.request.headers.get('User-Agent')
                or 'iPod' in app.request.headers.get('User-Agent')
                or 'Android' in app.request.headers.get('User-Agent')
                or 'BlackBerry' in app.request.headers.get('User-Agent') %}
            <div class="col-10 text3Rem alert alert-{{ label }} text-center">
                {% else %}
                <div class="col-10 alert alert-{{ label }} text-center">
                    {% endif %}
                    {{ message |raw}}
                </div>
            </div>
        </div>
        {% endfor %}
        {% endfor %}
        {% block body %}{% endblock %}
    </div>

    {% block javascripts %}
    {% endblock %}
    <footer>
        <div class="container mx-auto flex te flex-col md:flex-row justify-center gap-4">
        </div>
        <div class="mt-2">
            &copy; {{ "now"|date("Y") }} troc-et-partage.fr — Tous droits réservés
        </div>
    </footer>
    <script src="{{ asset('js/global.js') }}"></script>

</body>

</html>
